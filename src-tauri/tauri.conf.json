{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/main/crates/tauri-utils/schema.json",
  "productName": "Media Pull",
  "version": "1.0.0",
  "identifier": "com.mediapull.app",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "mkdir -p dist && cp index.html dist/ && rm -rf dist/src && cp -r src dist/",
    "beforeBuildCommand": "mkdir -p dist && cp index.html dist/ && rm -rf dist/src && cp -r src dist/"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Media Pull",
        "width": 960,
        "height": 700,
        "minWidth": 760,
        "minHeight": 580,
        "decorations": true,
        "resizable": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://i.ytimg.com https://img.youtube.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": {
      "../python": "python"
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "dmg": {
        "background": "dmg-background.png",
        "windowSize": { "width": 660, "height": 400 },
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 }
      }
    }
  }
}
